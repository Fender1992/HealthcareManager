@page "/Account/new-appointment"

<AuthorizeView>
    <Authorized Context="authContext">
        <h3>Appointment Request Form</h3>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                        </div>
                        <div class="card-body">
                            <EditForm Model="@newAppointment" OnValidSubmit="SubmitForm">
                                <DataAnnotationsValidator />
                                <h2>Submit a new request.</h2>
                                <hr />
                                <ValidationSummary class="text-danger" role="alert" />

                                <div class="form-group mb-3">
                                    <label for="createdDate">Appointment Date</label>
                                    <TelerikDatePicker @bind-Value="newAppointment.Date" />
                                    <ValidationMessage For="() => newAppointment.Date" class="text-danger" />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="name">Name</label>
                                    <TelerikTextBox @bind-Value="newAppointment.Name" Placeholder="John Doe" />
                                    <ValidationMessage For="() => newAppointment.Name" class="text-danger" />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="description">Description</label>
                                    <TelerikTextBox @bind-Value="newAppointment.Description" Placeholder="Consultation" />
                                    <ValidationMessage For="() => newAppointment.Description" class="text-danger" />
                                </div>

                                <div class="form-group mb-3">
                                    <label for="time">Appointment Time</label>
                                    <TelerikTimePicker @bind-Value="newAppointment.Time" />
                                    <ValidationMessage For="() => newAppointment.Time" class="text-danger" />
                                </div>

                                <TelerikButton ButtonType="ButtonType.Submit" Class="btn btn-primary">
                                    Submit
                                </TelerikButton>

                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
